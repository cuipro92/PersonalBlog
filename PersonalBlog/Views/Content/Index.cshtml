@model IEnumerable<PersonalBlog.Models.ContentModel>

@{
    ViewBag.Title = "Danh sách bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách bài viết</h2>

<p>
    @Html.ActionLink("Thêm mới bài viết", "Insert")
</p>
<table class="table">
    <tr>
        <th>
            Mã bài viết
        </th>
        <th>
            Tiêu đề của bài viết
        </th>
        <th>
            Nội dung bài viết
        </th>
        <th>
            Người tạo
        </th>
        <th>
            Người cập nhật
        </th>
        <th>
            Ngày tạo
        </th>
        <th>
            Ngày cập nhật
        </th>
        <th>
            Danh mục của bài viết
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserCreate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserUpdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUpdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ContentID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ContentID })
            </td>
        </tr>
    }

</table>
