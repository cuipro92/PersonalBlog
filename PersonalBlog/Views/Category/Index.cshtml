@model IEnumerable<PersonalBlog.Models.CategoryModel>

@{
    ViewBag.Title = "Thêm mới danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách danh mục</h2>

<p>
    @Html.ActionLink("Thêm mới danh mục", "Insert")
</p>
<table class="table">
    <tr>
        <th>
            Mã danh mục
        </th>
        <th>
            Tên danh mục
        </th>
        <th>
            Người tạo
        </th>
        <th>
            Người cập nhật
        </th>
        <th>
            Ngày tạo
        </th>
        <th>
            Ngày cập nhập
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserCreate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserUpdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUpdate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID })
            </td>
        </tr>
    }

</table>
